<!DOCTYPE html>
<html>
  <head>
    <title>SafgcApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>

      <%= render "shared/application_nav"%>

      <div class="fluid-container">
        <div class="row">
          <div class="col-lg-3">
            <div class="offset-sm-1 app-sidebar d-none d-lg-block">

            </div>
          </div>

          <div class="col-lg-8">
            <%= yield %>
          </div>

          <div class="col-lg-1">
          </div>
        </div>

        <div class="offset-sm-1 app-sidebar d-block d-lg-none">

        </div>
      </div>

      <%= render "shared/application_footer" %>

  </body>
</html>
