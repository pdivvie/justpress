<div class="container">
  <% if policy(@topic).update? %>
    <%= link_to fa_icon('file'), new_article_path %>
  <% end %>
  <hr>
  <div class="row text-center">
    <% if @articles != nil%>
      <%= render partial: 'shared/article', collection: @articles %>
    <% else %>
      <h3>There is no news at the moment</h3>
    <% end %>
  </div>
  <hr>
</div>