<div class="container">
  <h1>Matches</h1>

  <%= link_to 'New Match', new_match_path %>

  <hr>

  <nav class="breadcrumb">
    <%= link_to 'Home', root_path, class: 'breadcrumb-item' %>

    <span class="breadcrumb-item active">Matches</span>

    <span class="ml-auto">
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Player 1
        </a>
        <div class="dropdown-menu scrollable-menu" aria-labelledby="navbarDropdownMenuLink">
          <% User.order('username ASC').each do |user| %>

            <%= link_to user.username, matches_path(player_1: user.username), class: "dropdown-item" %>
          <% end %>
        </div>
      </li>
    </span>

  </nav>

  <div class="card">
    <% @matches.each do |match| %>
      <div class="row">
        <div class="col-md-3">
          <p><%= link_to match.game.title, games_path(match.game_id) %></p>
        </div>

        <div class="col-md-2">
          <p><%= link_to match.player_1, matches_path(player_1: match.player_1) %></p>
        </div>

        <div class="col-md-2">
          <p>vs</p>
        </div>

        <div class="col-md-1">
          <p><%= match.player_2 %></p>
        </div>

        <div class="col-md-2">

        </div>

        <div class="col-md-2">
          <p><%= link_to fa_icon('play'), match.link %></p>
        </div>
      </div>

      <div class="row">
        <div class="col-md-1">
          <p><%= link_to 'Show', match %></p>
        </div>

        <div class="col-md-1">
          <p><%= link_to 'Edit', edit_match_path(match) %></p>
        </div>

        <div class="col-md-1">
          <p><%= link_to 'Destroy', match, method: :delete, data: { confirm: 'Are you sure?' } %></p>
        </div>
        <div class="col-md-9"></div>
      </div>

      <hr>

    <% end %>
  </div>

  </div>

  <br>



</div>
